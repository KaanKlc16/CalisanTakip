@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Görev Takip Yönetici</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .navbar {
            background-color: #2e8b57; /* Koyu yeşil arka plan rengi */
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0.8rem 1rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            color: #ffffff; /* Beyaz metin rengi */
        }

            .navbar img {
                background-color: #ffffff; /* Görselin arka planını koyu gri yap */
                padding: 5px;
                border-radius: 8px; /* Köşe yuvarlama */
            }

            .navbar a {
                color: #ffffff; /* Beyaz metin rengi */
                text-decoration: none;
                padding: 14px 20px;
                font-size: 17px;
                font-weight: 500;
                border-radius: 4px;
                transition: background-color 0.3s, color 0.3s;
            }

                .navbar a:hover {
                    background-color: #495057; /* Hover arka plan rengi */
                    color: #ffffff; /* Hover'da beyaz renk */
                }

                .navbar a.active {
                    background-color: #ffffff; /* Beyaz arka plan rengi */
                    color: #2e8b57; /* Koyu yeşil metin rengi */
                }

            .navbar .search-container {
                display: flex;
                align-items: center;
            }

            .navbar input[type="text"] {
                padding: 6px;
                font-size: 17px;
                border: none;
                border-radius: 4px;
                margin-right: 10px;
            }

            .navbar button {
                padding: 6px 12px;
                background-color: #28a745; /* Buton arka plan rengi */
                color: white;
                font-size: 17px;
                border: none;
                border-radius: 4px;
                cursor: pointer;
                transition: background-color 0.3s;
            }

                .navbar button:hover {
                    background-color: #218838; /* Buton hover rengi */
                }

        .container {
            margin: 50px auto;
            max-width: 1200px;
            padding: 20px;
            background-color: #ffffff; /* Beyaz arka plan rengi */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Hafif gölge efekti */
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <img src="~/images/uludagenerji (1).png" alt="" style="height: 40px;">
        @Html.ActionLink("Anasayfa", "Index", "Yonetici", null, new { @class = "" })
        @Html.ActionLink("İş Ata", "Ata", "Yonetici", null, new { @class = "" })
        @Html.ActionLink("İş Takip", "Takip", "Yonetici", null, new { @class = "" })
        @Html.ActionLink("Çıkış", "Index", "Login", null, new { @class = "" })
    </nav>

    <main role="main" class="container">
        @RenderBody()
    </main>
</body>
</html>
